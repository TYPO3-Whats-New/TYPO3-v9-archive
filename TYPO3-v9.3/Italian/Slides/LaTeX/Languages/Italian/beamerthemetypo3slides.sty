\setbeamertemplate{frametitle}{

	\vspace{0.12cm}

	\sharefont
	\color{black}
	%\insertframetitle
	\textbf{\insertsection}

	\begin{pgfpicture}{0cm}{-.4cm}{11.6cm}{-.4cm}%
		\pgfsetcolor{typo3middlegrey}%
		\pgfsetlinewidth{1pt}%
		\pgfline{\pgfpoint{0cm}{-.2cm}}{\pgfpoint{11.6cm}{-.2cm}}%
	\end{pgfpicture}%

	\color{typo3middlegrey}
	\smaller{\textbf{\insertframesubtitle}}
}

\defbeamertemplate*{title page}{customized}[1][]
{
	\color{white}
	\begin{center}
		\vspace{2cm}
		\Huge\usebeamerfont{title}\inserttitle\par
		\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
		\bigskip
		\usebeamerfont{author}\insertauthor\par
	\end{center}

	\vspace{2.0cm}

	\hbox{%
		\begin{beamercolorbox}[wd=.5\paperwidth,ht=0.8cm,left,leftskip=10px]{license on titlepage}%
			\color{white}%
			% \tiny, \scriptsize, \footnotesize, \small, \normal
			\scriptsize{%
				\dateshort\par%
				Creative Commons BY-NC-SA 3.0%
			}%
		\end{beamercolorbox}%

		\begin{beamercolorbox}[wd=.5\paperwidth,ht=0.8cm,right,rightskip=30px]{logo on titlepage}%
			\includegraphics[width=60px]{typo3logo-white}%
		\end{beamercolorbox}%
	}%
}

\defbeamertemplate*{footline}{typo3theme}
{
	\leavevmode%

	\hbox{%
		\begin{beamercolorbox}[wd=.5\paperwidth,ht=0.8cm,left,leftskip=10px]{title in footer}%
			\sharefont%
			\inserttitle%
		\end{beamercolorbox}%

		\begin{beamercolorbox}[wd=.5\paperwidth,ht=0.8cm,right,rightskip=10px]{logo in footer}%
			\includegraphics[width=60px]{typo3logo}%
		\end{beamercolorbox}%
	}

	\vspace{0.2cm}

	\hbox{%
		\begin{beamercolorbox}[wd=1\paperwidth,ht=0.2cm,center]{orange bar in footer}%
		\end{beamercolorbox}%
	}%
	\vskip0pt
}

